# E2E Test Environment Variables
# Copy this file to .env.e2e and fill in your test credentials

# Base URL for testing (default: http://127.0.0.1:8000)
BASE_URL=http://127.0.0.1:8000

# Test user credentials
# These should be valid credentials for a test user in your system
TEST_USERNAME=testuser
TEST_PASSWORD=testpassword

# Admin credentials (optional, for admin-specific tests)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Stripe test keys (for payment testing)
# Use Stripe test mode keys only
STRIPE_TEST_PUBLIC_KEY=pk_test_...
STRIPE_TEST_SECRET_KEY=sk_test_...

# Feature flags for conditional testing
PAYMENTS_ENABLED=true
SUBMISSIONS_OPEN=false

# Browser configuration
HEADLESS=true
SLOW_MO=0

# Test timeout (milliseconds)
TEST_TIMEOUT=60000

# Screenshot and video settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# Debugging
DEBUG=false
